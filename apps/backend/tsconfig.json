{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2021",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": ["./node_modules"],
  "include": [
    "src/**/*.ts",
    "helper/**/*.ts",
    "jobs/**/*.ts",
    "middleware/**/*.ts",
    "tests/**/*.ts"
  ]
}
